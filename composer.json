{
    "name": "leedavis81/drest",
    "description": "Create a fully featured REST API service from Doctrine 2 Entity annotations.",
    "keywords": ["rest", "api", "doctrine2"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lee Davis",
            "email": "leedavis81@hotmail.com",
            "homepage": "http://www.duckheads.co.uk",
            "role": "Developer"
        }
    ],    
    "require": {
        "php": ">=5.3.3",
        "doctrine/common": "2.3.*",

        "guzzle/guzzle": "3.6.*",
        "zendframework/zend-code": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "leedavis81/altr-ego": "v1.0.0",
        "doctrine/orm": ">= 2.3.3",
        "zendframework/zend-http": ">= 2.1.5",
        "symfony/http-foundation": "v2.2.1",
        "satooshi/php-coveralls": "~0.6"
    },
    "suggest": {
        "symfony/yaml": "If you want to use YAML Metadata Mapping Driver",
        "symfony/http-foundation": "If you're not using Drest with an existing framework adapters (see documentation) then you MUST include this" 
    },    
    "bin": ["bin", "bin/drest.php"],
    "autoload": {
        "psr-0": { "Drest": "src/", "DrestTest": "tests/"}
    }
}